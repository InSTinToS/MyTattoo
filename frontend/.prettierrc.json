{
  "tabWidth": 2,
  "semi": false,
  "printWidth": 80,
  "singleQuote": true,
  "endOfLine": "auto",
  "trailingComma": "none",
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": [
    "^react$|^next$|^next/|^./styles|^styled-components",
    "^./|^../",
    "^components/atoms",
    "^^components/molecules",
    "^components/organisms",
    "^components/templates",
    "^pages",
    "^store",
    "^styles",
    "^tests",
    "^types",
    "^utils",
    "^@public",
    "^"
  ]
}
